{
  "type": "enum",
  "title": {
    "en": "Thermostat mode",
    "nl": "Thermostaat modus",
	"de": "Thermostat-Modus",
	"fr": "Mode thermostat"
  },
  "desc": {
    "en": "Mode of the thermostat",
    "nl": "Modus van de thermostaat",
	"de": "Modus des Thermostates",
	"fr": "Mode du thermostat"
  },
  "values": [
    {
      "id": "auto",
      "title": {
        "en": "Automatic",
        "nl": "Automatisch",
		"de": "Automatisch",
		"fr": "Automatique"
      }
    },
    {
      "id": "heat",
      "title": {
        "en": "Heat",
        "nl": "Verhitten",
		"de": "Heizen",
		"fr": "Chauffer"
      }
    },
    {
      "id": "cool",
      "title": {
        "en": "Cool",
        "nl": "Koelen",
		"de": "Kühlen",
		"fr": "Refroidir"
      }
    },
    {
      "id": "off",
      "title": {
        "en": "Off",
        "nl": "Uit",
		"de": "Aus",
		"fr": "Désactivé"
      }
    }
  ],
  "getable": true,
  "setable": true,
  "uiComponent": "picker",
  "$flow": {
    "triggers": [
      {
        "id": "thermostat_mode_changed",
        "title": {
          "en": "Thermostat mode has changed",
          "nl": "Thermostaat modus is veranderd",
		  "de": "Thermostat-Modus hat sich geändert",
		  "fr": "Mode thermostat a été modifié"
        },
        "args": [
          {
            "name": "thermostat_mode",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "thermostat_mode_is",
        "title": {
          "en": "Thermostat mode is",
          "nl": "Thermostaat modus is",
		  "de": "Thermostat-Modus ist",
		  "fr": "Mode thermostat est"
        },
        "args": [
          {
            "name": "thermostat_mode",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "thermostat_mode_set",
        "title": {
          "en": "Set the mode",
          "nl": "Stel de modus in",
		  "de": "Modus setzen",
		  "fr": "Définir le mode"
        },
        "args": [
          {
            "name": "thermostat_mode",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ]
  }
}