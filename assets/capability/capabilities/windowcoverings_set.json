{
  "type": "number",
  "title": {
    "en": "Position",
    "nl": "Positie"
  },
  "desc": {
	"en": "Set the position of window coverings. 0 is closed, 1 is open"
  },
  "chartType": "stepLine",
  "min": 0,
  "max": 1,
  "decimals": 2,
  "units": "%",
  "getable": true,
  "setable": true,
  "$flow": {
    "triggers": [
      {
        "id": "windowcoverings_set_changed",
        "title": {
          "en": "Position changed",
          "nl": "Positie veranderd"
        },
        "tokens": [
          {
            "name": "dim",
            "type": "number",
            "title": {
              "en": "Level",
              "nl": "Niveau"
            },
            "example": 0.5
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "dim",
        "title": {
          "en": "Set the position to",
          "nl": "Zet de positie naar"
        },
        "args": [
          {
            "name": "windowcoverings_set",
            "type": "range",
            "min": 0,
            "max": 1,
            "step": 0.01,
            "value": 0.5,
            "label": "%",
            "labelMultiplier": 100,
            "labelDecimals": 0
          }
        ]
      }
    ]
  }
}