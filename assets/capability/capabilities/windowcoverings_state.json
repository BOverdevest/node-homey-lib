        "args": [
          {
            "name": "state",
            "type": "dropdown",
            "values": "$values"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "set_windowcoverings_state",
        "title": {
          "en": "Set state",
          "nl": "Zet de status"
